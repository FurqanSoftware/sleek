@require './const'
@require './palette'

.pagination
	margin 0
	
	> li
		> a,
		> span
			margin 0 2px
			border none
			transition background-color $fast ease-in
	
	> li,
	> li:first-child,
	> li:last-child,
	> li:hover
		> a,
		> span
			border-radius 0.25rem

	> li:hover
		> a,
		> span
			background-color alpha($blue, 10%)
	
	> .active
		> a,
		> span
			background-color $blue !important
