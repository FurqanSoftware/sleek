@require './responsive'

.flex
    display flex

    &.-jc-center
        justify-content center

    &.-jc-around
        justify-content space-around

    &.-jc-right
        justify-content right

    &.-ai-center
        align-items center

_flex(ns)
    .{ns}flex-column
        flex-direction column
    .{ns}flex-row
        flex-direction row

    .{ns}flex-wrap
        flex-wrap wrap
    .{ns}flex-nowrap
        flex-wrap nowrap
    
    for n in (0..5)
        .{ns}flex-grow-{n}
            flex-grow n
        .{ns}flex-shrink-{n}
            flex-shrink n

    .{ns}flex-basis-0
        flex-basis 0
    for p in 25 50 75 100
        .{ns}flex-basis-{p}
            flex-basis percentage(p/100)

_flex('')

for bk, bv in _breakpoints
    @media (min-width: unit(bv, 'px'))
        _flex('%s-' % unquote(bk))

