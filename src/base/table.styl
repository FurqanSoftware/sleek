@require './const'
@require './func'
@require './palette'

table
	border-spacing 0
	border-collapse collapse
	background-color transparent

td,
th
	padding 0
	text-align left

.table
	width 100%
	max-width 100%
	margin-bottom 20px
	border none
	
	&__actions
		opacity 0.5
		
		.btngroup
			transition opacity $fast ease-in
			
			&:first-child
				margin-left auto

		.btn
			padding 0.25rem 0.5rem
			font-size 0.95em
	
	tr:hover .table__actions
		opacity 1

	> thead > tr > th,
	> tbody > tr > th,
	> tfoot > tr > th,
	> thead > tr > td,
	> tbody > tr > td,
	> tfoot > tr > td
		padding 1rem

	> thead > tr
		border-bottom 2px solid lighten($silver, 50%)
		
		> th
			font-weight bold
			
			.text + .icon
				margin-left 0.25rem

	> thead:first-child > tr:first-child > th,
	> thead:first-child > tr:first-child > td
		border-top 0
	
	> tbody > tr
		border-bottom 1px solid lighten($silver, 50%)
		
		&:last-child
			border-bottom-color transparent

	> tbody + tbody
		border-top 1px solid lighten($silver, 50%)

	> thead > tr > td.active,
	> tbody > tr > td.active,
	> tfoot > tr > td.active,
	> thead > tr > th.active,
	> tbody > tr > th.active,
	> tfoot > tr > th.active,
	> thead > tr.active > td,
	> tbody > tr.active > td,
	> tfoot > tr.active > td,
	> thead > tr.active > th,
	> tbody > tr.active > th,
	> tfoot > tr.active > th
		background-color lighten($silver, 75%)

.table.-emphasis > tbody tr:hover
	background linear-gradient($blueglow, $blueglow 3px, transparent 3px, transparent 100%), linear-gradient(to top, $blueglow, $blueglow 3px, transparent 3px, transparent 100%)

.tablebox
	min-height .01%
	margin-bottom 20px
	overflow-x auto
	
	> .table
		margin-bottom 0

@media screen and (max-width: 767px)
	.tablebox
		width 100%
		margin-bottom 15px
		overflow-y hidden
		border 1px solid lighten($silver, 50%)

		> .table
			margin-bottom 0

.panel__body
	> .tablebox:last-child > .table,
	> .table:last-child
		margin-bottom 0

	> .table
		thead > tr > th:first-child,
		tbody > tr > td:first-child
			padding-left 0

		thead > tr > th:last-child,
		tbody > tr > td:last-child
			padding-right 0

@media (min-width: 768px)
	.panel__body > .tablebox > .table
	.panel__body > .scroller > .table
		thead > tr > th:first-child,
		tbody > tr > td:first-child
			padding-left 0

		thead > tr > th:last-child,
		tbody > tr > td:last-child
			padding-right 0
