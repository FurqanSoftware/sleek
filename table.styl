@require './func'
@require './color'

.table
	border none !important

	> thead
		> tr
			border-bottom 1px solid lighten($silver, 50%)

			> th
				border none
				font-weight 500

				.text + .icon
					margin-left 5px

	> tbody
		> tr
			border-bottom 1px solid lighten($silver, 50%)

			> td
				border none
				
				vertical-align middle

			&:last-child
				border none

	> thead,
	> tbody
		> tr.active > th,
		> tr.active > td,
		> tr > th.active,
		> tr > td.active
			background-color lighten($silver, 75%)
	
.table--nested
	margin-bottom 0
	
	> tbody > tr
		border-bottom none

.portlet > .content
	> .table-responsive:last-child > .table,
	> .table:last-child
		margin-bottom 0

	> .table
		thead > tr > th:first-child,
		tbody > tr > td:first-child
			padding-left 0

		thead > tr > th:last-child,
		tbody > tr > td:last-child
			padding-right 0

@media (min-width: 768px)
	.portlet > .content > .table-responsive > .table
	.portlet > .content > .scroller > .table
		thead > tr > th:first-child,
		tbody > tr > td:first-child
			padding-left 0

		thead > tr > th:last-child,
		tbody > tr > td:last-child
			padding-right 0

@media (max-width: 767px)
	.table-responsive
		border 1px solid lighten($silver, 50%)
