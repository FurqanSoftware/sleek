@require './func'
@require './palette'

.artifact
	font-size 1.25rem
	line-height 2em

	&__cover
		position relative
		min-height 160px
		margin -1.25rem -1.25rem 1.25rem
		border-bottom 1px solid #e7ecf1
		border-radius 0.25rem 0.25rem 0 0
		overflow hidden

		&.-modest
			height 160px
			opacity 0.5
			transition opacity 0.25s ease-in-out
		
		&.-placeholder
			background-position 50% 50%
			background-size auto
			background-color #e7ecf1
			background-repeat repeat
		
		img
			display block
			width 100%
			height auto
	
	&:hover
		.artifact__cover
			opacity 1

	&__header
		position relative

		.flairs
			position absolute
			bottom 10px

	&__caption
		h1, h2, h3, h4
			margin-top 0
	
	p > img,
	p > picture > img
		display block
		margin 0 auto 8px
		max-width 100%
	
	pre[class*="language-"]
		margin 1.25rem 0
	
	table
		width 100%
		max-width 100%
	
	a.caption
		&,
		&:hover,
		&:focus
			color $dark

	table.-samples
		> thead > tr > th
			font-size 0.95em
	
		> tbody > tr > td
			vertical-align top

		pre
			padding 0
			margin 0
			
	img
		display block
		margin 0 auto
		max-width 100%
	