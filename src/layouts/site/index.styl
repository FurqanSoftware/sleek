@require '../../base/func'
@require '../../base/palette'

body
	display flex
	flex-direction column
	min-height 100vh
	background-color #f7f9fc

.phead
	margin-bottom 25px
	border-bottom 1px solid $silver
	background white
	box-shadow 0 1px 0 alpha($dark, 0.0325)

	&__logo
		float left
		padding 15px 0

.pmenu
	float right
	margin 15px 0

	&__item
		position relative
		float left
		display block
		height 40px
		border-radius 0.25rem
	
		&.-user img
			margin-left 10px
			border-radius 0.25rem

		&.-link,
		&.-bell > a
			text-decoration none
			transition background-color 0.25s ease-in-out

			img
				display block
				opacity 0.35
				transition opacity 0.25s ease-in-out

			&:hover,
			&:focus,
			&.-open
				text-decoration none
				background-color lighten($dark, 95%)

				img
					opacity 0.5

		&.-link
			padding 7px 8px 9px
			line-height 24px
		
		&.-bell > a
			display block
			padding 8px
		
		.badge
			position absolute
			bottom 0
			right 0
			background-color alpha($red, 75%)
			color white

.pfoot
	margin-top auto
	padding 15px 0
	border-top 1px solid $silver
	color $muted

	a
		color $muted

		&:hover,
		&:focus
			color darken($muted, 20%)

	&__logo
		margin 10px 0

	&__social a
		margin-right 5px

	&__nav
		float right
		width 40%
		margin 10px 0
		text-align center

		ul
			list-style none
			margin-bottom 0
			padding-left 0

			li
				padding 12px 0

	&__legal
		float right

		a
			margin-left 15px

			&:first-child
				margin-left 0

@media (min-width: 992px)
	.pmenu__item.-bars
		display none

@media (max-width: 767px)
	.pfoot
		text-align center

		&__rights
			margin-top 10px

		&__nav
			float none
			width auto
			margin-bottom 25px

		&__legal
			float none

