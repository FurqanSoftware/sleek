@require '../../base/const'
@require '../../base/func'
@require '../../base/palette'

body
	background-color $dark

.phead
	&__logo
		float left
		padding 15px 0

.pmenu
	float right
	margin 15px 0
	
	&__item
		position relative
		float left
		display block
		height 40px
		border-radius 0.25rem
	
		&.-user
			margin-left 0.5rem

			img
				border-radius 0.25rem

		&.-link,
		&.-drop > a
			transition background-color $fast ease-in

			img
				transition opacity $fast ease-in

			&:hover,
			&:focus,
			&.-open
				background-color lighten($dark, 5%)

		&.-link
			padding 8px
			line-height 24px
		
		&.-drop > a
			display block
			padding 8px
		
		.badge
			position absolute
			bottom 0
			right 0
			background-color alpha($red, 75%)
			color white

.pside
	width auto
	padding-bottom 20px
	color white

	&__timer
		margin 22px 18px 11px

		.progress
			height 5px
			border-bottom 1px solid white
			border-radius 0
			
			.progress__bar
				background-color white

	&__link
		display block
		position relative
		padding 0.5rem 1rem
		text-decoration none
		background-color transparent
		color white
		
		&::after
			content ''
			position absolute
			top 0
			left 0
			height 100%
			border-left 5px solid alpha(white, 50%)
			transform scaleY(0)
			transition transform $fast ease-in

		&:hover,
		&:focus
			text-decoration none
			color white
			
			&::after
				transform scaleY(1)
	
		&.disabled
			opacity 0.5
			cursor not-allowed

		&.-active
			&::after
				transform scaleY(1)
				border-left-color white
	
		.icon
			margin -2px 5px 0 0

.pfoot
	padding 10px 0
	text-align center
	color $silver

	a
		color $silver

		&:hover,
		&:focus
			color lighten($silver, 20%)

#content
	min-height 100vh
	margin-left 0
	padding-top 15px
	border-radius 0
	background-color #f7f9fc

@media (max-width: 991px)
	.pside
		display none
		overflow-y hidden

		&.-open
			display block

@media (min-width: 992px)
	.pmenu__item.-bars
		display none

	.pside
		float left
		width 275px
		padding-bottom 75px

	.pfoot
		position fixed
		bottom 0
		left 0
		width 275px
		background-color alpha($dark, 95%)

	#content
		margin-left 275px
		border-radius 0.25rem 0 0 0
