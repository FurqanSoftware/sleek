@require '../../const'
@require '../../palette'

.strips
	margin -1rem -1.25rem -1rem
	border-top 1px solid lighten($silver, 75%)

	&__item
		display block
		position relative
		padding 0.5rem 1.25rem
		border-bottom 1px solid lighten($silver, 75%)
		text-decoration none
		transition background-color $fast ease-in
		
		&:focus,
		&:hover
			text-decoration none
			box-shadow inset 0.5rem 0 0 -0.25rem $blueglow

		&:last-child
			border-bottom none

		&.-active
			box-shadow inset 0.5rem 0 0 -0.25rem $blue
			color $dark

			&:last-child
				border-radius 0 0 0 0.25rem

		&.-disabled
			color $muted
			background-color transparent
			cursor default
			opacity 0.75

@media (max-width: 991px)
	.strips
		> :not(.-active),
		.badge
			display none

	.stripsbox
		display inline-block
		margin-bottom 0.5em

		> .panel
			display none
