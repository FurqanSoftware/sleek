@require '../../const'
@require '../../func'
@require '../../palette'

:root
	--sleek-site-pmenu-item-hover-background-color $silverglow
    --sleek-site-pmenu-icon-filter none

body
	display flex
	flex-direction column
	min-height 100vh
	background-color var(--sleek-body-background-color)

.phead
	margin-bottom 1.5rem
	border-bottom 1px solid var(--sleek-surface-border-color-subtle)
	background var(--sleek-surface-background-color)

	&__body
		display flex
		align-items center

	&__logo
		float left
		padding 1rem 0
	
	&.-shade
		border-bottom 1px solid var(--sleek-surface-border-color)
		box-shadow 0 0.0625rem 0.125rem var(--sleek-shadow-color-1)

.pmenu
	display flex
	margin-left auto

	&__item
		position relative
		display block
	
		&.-user
			margin-left 0.5rem

			img
				border-radius 0.25rem

		&.-link,
		&.-drop > a
			border-radius 0.25rem
			text-decoration none
			transition background-color $fast ease-in

			&:hover,
			&:focus,
			&.-open
				text-decoration none
				background-color var(--sleek-site-pmenu-item-hover-background-color)

		&.-link,
		&.-drop > a
			> img,
			.dropdown__toggle img
				display block
				opacity 0.35
				transition opacity $fast ease-in

			.icon
				filter var(--sleek-site-pmenu-icon-filter)

			&:hover,
			&:focus,
			&.-open
				> img,
				.dropdown__toggle img
					opacity 0.5

		&.-link
			padding 8px
			line-height 24px
		
		&.-drop > a
			display block
			padding 8px
		
		.badge
			position absolute
			bottom 0
			right 0
			background-color alpha($red, 75%)
			color white

	&__divider
		position relative
		float left
		display block
		height 40px
		margin 0.75rem
		border-right 1px solid var(--sleek-divider-border-color)
		height 1rem

.pfoot
	margin-top auto
	padding 1rem 0
	border-top 1px solid var(--sleek-surface-border-color)
	color var(--sleek-text-muted-color)

	a
		color var(--sleek-text-muted-color)

		&:hover,
		&:focus
			color darken($muted, 20%)

	&__logo
		margin 0.5rem 0 1.5rem

	&__nav
		float right
		width 40%
		margin 0.5rem 0
		text-align center

		ul
			list-style none
			margin-bottom 0
			padding-left 0

			li
				padding 0.75rem 0

	&__legal
		float right

		a
			margin-left 1rem

			&:first-child
				margin-left 0

@media (min-width: 992px)
	.pmenu__item.-bars
		display none

@media (max-width: 767px)
	.pfoot
		text-align center

		&__rights
			margin-top 0.5rem

		&__nav
			float none
			width auto
			margin-bottom 1.5rem

		&__legal
			float none

