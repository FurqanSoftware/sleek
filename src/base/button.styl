@require './func'
@require './color'

.btngroup
	position relative
	display inline-block
	margin-left 5px
	
	&:first-child
		margin-left 0
	
	> .btn
		position relative
		float left

		&:not(:first-child):not(:last-child)
			border-radius 0

		&:first-child:not(:last-child):not(.-toggle)
			border-radius 3px 0 0 3px

		&:last-child:not(:first-child), &.-toggle:not(:first-child)
			border-radius 0 3px 3px 0

.btn
	display inline-block
	padding 10px 15px
	border none
	border-radius 3px
	outline none !important
	text-align center
	background-color transparent

	&.-disabled,
	&[disabled]
		opacity 0.65
	
	&.-block
		display block
		width 100%

	.icon
		margin-top -2px
		font-size 16px

		+ .text
			margin-left 5px

	.text + .icon
		margin-left 5px

_button(name, bg, text, edge=10%, hover=30%, active=15%)
	.btn
		&.-{name}
			color text
			background-color bg
			box-shadow inset 0 -2px 0 darken(bg, edge)

		&.-{name}:hover,
		&.-{name}:focus
			box-shadow inset 0 -2px 0 darken(bg, hover)

		&.-{name}:active,
		&.-{name}.-active
			background-color darken(bg, (active/3))
			box-shadow inset 1px 2px 0 darken(bg, active)
			
		&.-{name}.-disabled,
		&.-{name}[disabled]
			box-shadow none
	
	.open > &.-{name}.-toggle
		background-color darken(bg, (active/3))
		box-shadow inset 1px 2px 0 darken(bg, active)

_button('default', #e1e5ec, $dark)
_button('blue', $blue, white, 20%, 45%, 22.5%)
_button('red', $red, white, 20%, 45%, 22.5%)

.btn.-white
	border 1px solid lighten($silver, 50%)
	color $dark
	background-color white
	box-shadow inset 0 -2px 0 lighten($silver, 50%)

	&:hover,
	&:focus
		border-color $silver
		box-shadow inset 0 -2px 0 $silver

	&:active,
	&.-active
		background-color lighten($silver, 15%)
		box-shadow inset 1px 2px 1px lighten($silver, 50%)

.open > &.-white.-toggle
	background-color lighten($silver, 15%)
	box-shadow inset 1px 2px 1px lighten($silver, 50%)

.btn.-simple
	border 1px solid lighten($silver, 50%)
	color $dark
	background-color white

	&:hover,
	&:focus,
	&:active,
	&.-active
		border-color $silver

.btn.-subtle
	border 1px solid transparent
	color $dark

	&:hover,
	&:focus,
	&:active,
	&.-active
		border-color $silver
