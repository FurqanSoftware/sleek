@require './responsive'

_space(ns)
    _seen = {}
    for n in (0..5)
        for d in (1..5)
            if !_seen[n/d]
                _seen[n/d] = true
                x = d == 1 ? n : s("%d-%d", n, d)
                // Gap
                .{ns}gap-{x}
                    gap unit(n/d, rem)
                // Margin, Padding
                for k in 'margin' 'padding'
                    kc = substr(k, 0, 1)
                    .{ns}{kc}-{x}
                        {k} unit(n/d, rem)
                    for e in top right bottom left
                        ec = substr(e, 0, 1)
                        .{ns}{kc}{ec}-{x}
                            {k}-{e} unit(n/d, rem)

    .{ns}m-auto
        margin auto
    for e in top right bottom left
        ec = substr(e, 0, 1)
        .{ns}m{ec}-auto
            margin-{e} auto

_space('')

for bk, bv in _breakpoints
    @media (min-width: unit(bv, 'px'))
        _space('%s-' % unquote(bk))
