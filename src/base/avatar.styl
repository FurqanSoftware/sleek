@require './const'
@require './palette'

.avatar
	display inline-block
	position relative
	
	img 
		background-color darken($silver, 5%)
		border-radius 0.25rem

	&.-sm
		width 40px
		
		+ .handle
			margin-left 10px
		
	&.-xs
		width 20px
		
		+ .handle
			margin-left 5px
			vertical-align middle

	.emblem
		position absolute
		right -3px
		bottom -5px
		width 24px
		height 18px
		margin 0
		transition opacity $fast ease, transform $fast ease

	&:hover
		.emblem
			transform translateY(10px)
			opacity 0

.avatarset
	display flex
	flex-wrap wrap
	gap 0.25rem
