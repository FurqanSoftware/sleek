@require '../../base/const'
@require '../../base/palette'

.pills
	display flex

	&__item
		flex 0 0 auto
		border-radius 0.25rem
		text-decoration none
		transition background-color $fast ease-in
		
		&:not(.-drop),
		&.-drop > .dropdown__toggle
			padding 0.5rem 1rem
		
		&.-drop > .dropdown__toggle
			display block
		
		&:focus,
		&:hover
			text-decoration none
			background-color alpha($blue, 10%)

		> .badge
			float right
			margin-left 0.5rem
			color $muted

		&:focus,
		&:hover
			> .badge
				background-color alpha(white, 25%)
		
		&.-active
			color white
			background-color $blue
			
			.badge
				background-color alpha(white, 12.5%)
				color white
		
		&.-disabled
			color $muted
			background-color transparent
			cursor default
			opacity 0.75
		
		&.-navsm
			border 1px solid $silver

		> .icon + .text
			margin-left 0.5rem
	
		img.icon
			margin-top -2px

			+ .text
				margin-left 5px
		
		+ .pills__item
			margin-left 2px

	&__divider
		height 1em
		margin auto 1em
		border-right 1px solid $silver

@media (max-width: 991px)
	.pills
		> :not(.-active):not(.-navsm)
			display none

	.pillsbox
		display inline-block
		margin-bottom 25px

		> .panel
			display none
