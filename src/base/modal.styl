@require './func'
@require './color'

.modal-content
	border lighten($dark, 50%)
	border-radius 0.25rem
	box-shadow 0 5px 5px alpha($dark, 0.25)

	.panel
		padding 10px
		border none
		border-bottom 1px solid lighten($silver, 75%)
		border-radius 0
		box-shadow none

.modal-header
	border-color lighten($silver, 75%)

	.close
		float right
		padding 2px 5px
		font-size 1rem
		opacity 1

.modal.fade .modal-dialog
	transition none

.modal-backdrop
	background: rgba($dark, 0.5)
