@require './const'
@require './func'
@require './palette'

.btn
	display inline-block
	padding 0.5rem 1rem
	border none
	border-radius 0.25rem
	outline none !important
	text-align center
	text-decoration none
	background-color transparent
	
	&:hover,
	&:focus
		text-decoration none

	&.-disabled,
	&[disabled]
		opacity 0.65
	
	&.-block
		display block
		width 100%

	.icon
		margin-top -2px
		font-size 1rem

		+ .text
			margin-left 5px

	.text + .icon
		margin-left 5px
	
	&.-sm
		padding 0.25rem 0.5rem
		font-size 0.95rem

_button(name, bg, text, edge=20%, hover=10%, active=20%)
	.btn
		&.-{name}
			color text
			border 1px solid darken(bg, edge)
			background-color bg
			transition box-shadow $fast ease-in

		&.-{name}:hover
			background-color darken(bg, hover)
			box-shadow inset 0 0 0 0.125rem darken(bg, ((edge+hover)/2))

		&.-{name}:focus
			background-color darken(bg, hover)
			box-shadow inset 0 0 0 0.125rem darken(bg, ((edge+hover)/2)), 0 0 0 0.25rem $blueglow
			z-index 1

		&.-{name}.-active
			background-color darken(bg, active)
			box-shadow inset 0 0 0 0.125rem darken(bg, ((edge+hover)/2))
			
		&.-{name}.-disabled,
		&.-{name}[disabled]
			box-shadow none
	
	.-open > &.-{name}.-toggle
		background-color darken(bg, active)
		box-shadow inset 0 0 0 0.125rem darken(bg, ((edge+hover)/2))

_button('default', #e1e5ec, $dark)
_button('blue', $blue, white)
_button('red', $red, white)
_button('simple', white, $dark)
_button('subtle', white, $dark)

.btn.-subtle
	border 1px solid transparent
	background-color transparent

.btngroup
	display flex
	
	> .btn
		~ .btn
			border-left 0

		&:not(:first-child):not(:last-child)
			border-radius 0

		&:first-child:not(:last-child):not(.-toggle)
			border-radius 0.25rem 0 0 0.25rem

		&:last-child:not(:first-child), &.-toggle:not(:first-child)
			border-radius 0 0.25rem 0.25rem 0

.btntoolbar
	display flex
	gap 5px
	
	.-right.btngroup
		margin-left auto
