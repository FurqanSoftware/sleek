@require './func'
@require './color'

.btngroup
	position relative
	display inline-block
	margin-left 5px
	
	&:first-child
		margin-left 0
	
	> .btn
		position relative
		float left

.btn
	display inline-block
	padding 10px 15px
	border none
	border-radius 3px
	outline none !important
	text-align center
	background-color transparent
	transition box-shadow 0.25s ease-in-out, border-color 0.25s ease-in-out

	&.-disabled,
	&[disabled]
		opacity 0.65
	
	&.-block
		display block
		width 100%

	.icon
		margin-top -2px
		font-size 16px

		+ .text
			margin-left 5px

	.text + .icon
		margin-left 5px

_button(name, bg, text, edge=10%, hover=30%, active=15%)
	.btn
		&.-{name}
			color text
			background-color bg
			box-shadow inset 0 -2px 0 darken(bg, edge)

		&.-{name}:hover,
		&.-{name}:focus
			box-shadow inset 0 -2px 0 darken(bg, hover)

		&.-{name}:active,
		&.-{name}.active
			box-shadow inset 1px 2px 0 darken(bg, active)
			
		&.-{name}.-disabled,
		&.-{name}[disabled]
			box-shadow none
	
	.open > &.-{name}:first-child
		box-shadow inset 1px 2px 0 darken(bg, active)

_button('default', #e1e5ec, $muted)
_button('blue', $blue, white, 20%, 60%, 30%)
_button('red', $red, white, 20%, 60%, 30%)

.btn.-subtle
	border 1px solid lighten($silver, 50%)
	color $dark
	box-shadow inset 0 -2px 0 lighten($silver, 50%)

	&:hover,
	&:focus
		border-color $silver
		box-shadow inset 0 -2px 0 $silver

	&:active,
	&.active
		box-shadow inset 1px 2px 1px lighten($silver, 50%)

.open > &.-subtle:first-child
	box-shadow inset 1px 2px 1px lighten($silver, 50%)
