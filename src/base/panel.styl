@require './const'
@require './func'
@require './palette'

.panel
	margin-bottom 0.5rem
	border 1px solid $silver
	border-radius 0.25rem
	background-color white
	box-shadow 0 0.0625rem 0.125rem $shadow1

	&.-fit
		padding 0

	&.-green
		border-color $green

	&__head
		padding 1rem 1.25rem
		
		&::after
			content ''
			display block
			clear both

	&__head.-socle
		border-bottom 1px solid $silver
		box-shadow 0 0.25rem 0.125rem $shadow0
		
		.tabsbox
			margin-top 1rem
			margin-bottom -1rem

	&__drawer
		display none
		padding 1rem 1.25rem 0.5rem
		border-top 1px solid lighten($silver, 50%)
		border-bottom 1px solid lighten($silver, 50%)
		box-shadow inset 0 0.25rem 0.125rem $shadow0
		
		&:after
			display table
			content " "
			clear both

		&.-open
			display block

	&__body
		padding 1rem 1.25rem

		.progress
			margin-bottom 0

	&__foot.-shade
		padding 1rem 1.25rem
		background-color lighten($silver, 75%)

	&__title
		float left
		line-height 2.25rem

		h1, h2, h3, h4, h5, h6
			margin 0
			font-size 1.25em
	
		.icon
			margin -2px 5px 0 0
			font-size 1.5rem

	&__actions
		float right
		display flex
		gap 0.25rem
		margin 0 0 0 auto

		.btn
			padding 0.25rem 0.5rem
			font-size 0.95em

	&.-clipped > &__body
		max-height 190px
		overflow hidden
		mask-image linear-gradient(to top, transparent 1%, white 50%)

	&.-closed
		> .panel__body,
		> .panel__foot
			display none

a > .panel
	transition border-color $fast ease-in

	&:hover
		border-color $blueglow

section
	> .caption
		margin 0 0 25px
		padding 25px 0
		text-align center
		color $muted

		h1, h2, h3, h4, h5, h6
			margin 0

@media (max-width: 767px)
	.panel .panel__actions .btn
		.icon + .text
			display none
