@require './const'
@require './func'
@require './palette'

.form
	&__group
		margin-bottom 0.5rem
	
	&__label
		margin-bottom 0.25rem

	&__field
		display block
		width 100%
		padding 0.25rem 0.5rem
		border 1px solid $dark500
		border-radius 0.25rem
		font-size 1rem
		background-color white
		color $dark
		box-shadow inset 0 0.25rem 0.125rem $shadow0
		transition border-color $fast ease-in, box-shadow $fast ease-in

		&:focus
			border-color $blue
			outline 0
			box-shadow inset 0 0.25rem 0.125rem $shadow0, 0 0 0 0.25rem $blueglow
			
	&__field[readonly],
	&__field[disabled]
		background-color lighten($silver, 50%)
		color alpha($dark, 0.75)
		
		&:focus
			border-color mix($dark, $silver, 20)
			box-shadow inset 0 0.25rem 0.125rem $shadow0, 0 0 0 0.25rem $blueglow
	
	textarea.form__field
		height auto

	&__field.flatpickr-input[readonly]
		background-color white

	&__brace
		display table
		width 100%

		> .form__field
			display table-cell
			width 100%
			vertical-align middle

		& .form__addon
			display table-cell
			width 0.1%
			padding-right 10px
			vertical-align middle

	&__hint
		margin-top 5px
		color $muted

		&.-green
			color $green

		&.-orange
			color $orange

fieldset
	margin 0 -20px 30px
	padding 30px 20px 0
	border-top 1px solid lighten($silver, 75%)

	.&__head
		margin-bottom 15px
	
	.&__toggle
		float right
		margin-top 0.5em
		margin-left 30px

	.&__title
		text-decoration underline
		font-size 1.1rem

	.&__note
		margin-top 5px
		color $muted


	&.-closed
		.fieldset__head
			margin-bottom 0

		.form__group
			display none

	&.-flags
		.form__group
			margin-bottom 20px

		.switch
			float right
			margin-top 0.5em
			margin-left 30px
