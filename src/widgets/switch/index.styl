@require '../../base/palette'

.switch
	position relative
	display inline-block

.switch--readonly .switch__toggle::after
	background-color #eee
	box-shadow none

.switch__input
	display none

.switch__toggle
	display block
	width 52px
	height 29px
	text-indent -150%
	clip rect(0 0 0 0)
	color transparent
	user-select none

.switch__toggle::before,
.switch__toggle::after
	content ""
	display block
	position absolute
	cursor pointer

.switch__toggle::before
	width 100%
	height 100%
	border 1px solid mix($dark, $silver, 10)
	border-radius 0.25rem
	box-shadow inset 0 1px 0 rgba(0, 0, 0, .075)
	transition background-color 0.25s ease

.switch__toggle::after
	top 0
	left 0
	width 20px
	height 20px
	margin 7px
	border 1px solid $silver
	border-radius 0.25rem
	background-color white
	box-shadow 0 1px 0 alpha($dark, .075)
	transition left 0.25s ease

.switch__input:checked + .switch__toggle::before
	background-color alpha($blue, 0.05)

.switch__input:checked + .switch__toggle::after
	left 20px
	border-color $blue
	background-color $blue
